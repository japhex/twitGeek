<h2>Sign <span>in</span></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
		<%= f.label :login %>
		<div class="input">
  		<%= f.text_field :login %>
		</div>
	</div>
  <div class="clearfix">
		<%= f.label :password %>
		<div class="input">
  		<%= f.password_field :password %>
			<span class="help-inline">
				<%= link_to "Forgotten?", new_password_path(resource_name) %>
			</span>
		</div>
	</div>
  <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
			<%= f.label :remember_me, :class => 'remember-me-label' %>
			<div class="input">
				<%= f.check_box :remember_me %> 
			</div>
		</div>
  <% end -%>
  <div class="actions">
		<%= f.submit "Sign in", :class => 'btn primary' %>
		<%= f.submit "Reset", :class => 'btn', :type => 'Reset' %>
	</div>
<% end %>