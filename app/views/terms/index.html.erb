<% if user_signed_in? %>
<%= render "terms/new" %>
<ul id="feed-nav"></ul>
<section id="user-feeds">
			<% current_user.terms.each_with_index do |term,i| %>
				<article data-feed-name="<%= term.name %>" class="<% if i==0 %>active<% end %>">		
					<%= link_to 'Delete', term, :confirm => 'Are you sure?', :method => :delete, :class => 'feed-action delete-action', :remote => true %>
				</article>
			<% end %>
</section>
<% end %>